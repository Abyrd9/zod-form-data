{
  "name": "@abyrd9/zod-form-data",
  "version": "0.1.2",
  "description": "A Zod-based form data validation library",
  "license": "MIT",
  "keywords": [
    "zod",
    "form",
    "validation",
    "typescript",
    "react"
  ],
  "module": "./index.ts",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "files": [
    "dist/src",
    "dist/*.js",
    "dist/*.d.ts"
  ],
  "devDependencies": {
    "@happy-dom/global-registrator": "^17.4.4",
    "@testing-library/dom": "^10.4.0",
    "@types/bun": "latest",
    "@types/react": "^19.0.10",
    "rimraf": "^6.0.1",
    "vitest": "^3.0.8"
  },
  "peerDependencies": {
    "typescript": "^5.7.2",
    "react": "^19.0.0-rc.1",
    "react-dom": ">=18.0.0",
    "zod": "^3.23.8"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": false
    },
    "react": {
      "optional": false
    },
    "react-dom": {
      "optional": true
    },
    "zod": {
      "optional": false
    }
  },
  "scripts": {
    "test": "bun test",
    "test:watch": "bun test --watch",
    "update": "npx npm-check-updates -u",
    "clean": "rm -rf dist",
    "build": "bun run clean && bun build ./index.ts --outdir ./dist --target node --format esm && tsc",
    "publish:patch": "bun run build && npm version patch && bun publish",
    "publish:minor": "bun run build && npm version minor && bun publish",
    "publish:major": "bun run build && npm version major && bun publish"
  },
  "dependencies": {
    "@testing-library/react": "^16.2.0"
  }
}
