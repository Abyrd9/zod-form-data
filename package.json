{
  "name": "@abyrd9/zod-form-data",
  "version": "1.0.1",
  "description": "A Zod-based form data validation library",
  "license": "MIT",
  "keywords": [
    "zod",
    "form",
    "validation",
    "typescript",
    "react"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@happy-dom/global-registrator": "^18.0.0",
    "@testing-library/dom": "^10.4.0",
    "@types/bun": "latest",
    "@types/react": "^19.1.8",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "rimraf": "^6.0.1",
    "zod": "^3.25.67",
    "tsup": "^8.5.0",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "react": "^19.1.0",
    "react-dom": ">=18.0.0",
    "typescript": "^5.8.3",
    "zod": "^3.25.67"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": false
    },
    "react": {
      "optional": false
    },
    "react-dom": {
      "optional": true
    },
    "zod": {
      "optional": false
    }
  },
  "scripts": {
    "test": "bun test",
    "test:watch": "bun test --watch",
    "update": "npx npm-check-updates -u",
    "clean": "rm -rf dist",
    "build": "tsup",
    "build:watch": "tsup --watch",
    "dev": "bun --hot index.html",
    "dev:tsx": "bun --hot browser.tsx",
    "publish:patch": "bun run build && npm version patch && bun publish",
    "publish:minor": "bun run build && npm version minor && bun publish",
    "publish:major": "bun run build && npm version major && bun publish"
  },
  "dependencies": {
    "@testing-library/react": "^16.3.0"
  }
}
